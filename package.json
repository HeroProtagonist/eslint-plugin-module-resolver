{
  "name": "eslint-plugin-module-resolver",
  "version": "0.16.0",
  "description": "Warn when using relative paths to modules aliased",
  "repository": "HeroProtagonist/eslint-plugin-module-resolver",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "files": [
    "dist"
  ],
  "author": "Jordan",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "yarn clean",
    "build": "babel lib --out-dir dist",
    "build:watch": "yarn build --watch",
    "clean": "rimraf *.tgz dist",
    "bump": "yarn test && yarn version && yarn build && npm publish",
    "format": "prettier --write '{lib,tests}/**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "find-babel-config": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "codecov": "^3.6.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.0"
  },
  "license": "MIT"
}